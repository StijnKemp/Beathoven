#:kivy 1.9.1

<CustomButton@Button>:
    background_color: (0, 1, 1, .3)
    on_press: self.background_color = (1, 1, 1, 1)
    on_release: self.background_color = (0, 1, 1, .3)
    height: 50

<BeathovenGridLayout>:
    cols: 2
    rows: 1

    padding: 0
    spacing: 10
    

    BoxLayout:
        orientation: "vertical"
        size_hint_x: None

        CustomButton:
            text: "Import"
        CustomButton:
            text: "Train"
            on_release: root.train()
        CustomButton:
            text: "Generate song"
            on_release: root.generate_song()
        CustomButton:
            text: "Play song"
            on_release: root.play_midi()    
        
    BoxLayout:
        orientation: "vertical"

        Label:
            text: root.folder_path
            color: 1, 1, 1, 1
        Button:
            text: "jemoeder"        